{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esNext",
    "target": "es6",
    "lib": [
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "noEmit": true,
    "pretty": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
    ],
    "paths": {
      "@selfcare/core/*": [
        "./selfcare-core/src/*"
      ],
      "@selfcare/ui/*": [
        "./selfcare-ui/src/*"
      ],
    },
    "strictNullChecks": false,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "jest"
  ]
}